pipeline {
    agent { label 'slavery-node' }
    environment {
        registry = 'https://registry.gitlab.com'
        personalAccessToken = 'personal-access-token-api'
        deployToken = 'deploy-token-read-write-registry'
    }
    stages {
        stage('clone stage') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: personalAccessToken, url: 'https://lytiendung.10@gitlab.com/lytiendung.10/project-01.git']])
            }
        }
        stage('build stage') {
            steps {
                script {
                    def dockerImage = docker.build("registry.gitlab.com/lytiendung.10/project-01:built-${env.BUILD_ID}")
                    script {
                        docker.withRegistry( registry, deployToken ) {
                            dockerImage.push()
                        }
                    }
                }
            }
        }
    }
}